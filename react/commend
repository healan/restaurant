npm install -g create-react-app@1.5.2
create-react-app --help
npx create-react-app confusion
npm start

yarn add bootstrap@4.0.0
yarn add reactstrap@5.0.0
yarn add react-popper@0.9.2

--Installing create-react-app
yarn global add create-react-app@1.5.2
create-react-app --help

--Generating and Serving a React Project using create-react-app
create-react-app confusion
yarn start

-- json-server is a node module(REST API Server)
npm install json-server -g
json-server --watch db.json -p 3001 -d 2000
(*-p means port 3001, -d means delay 2 Sec)
--https://github.com/typicode/json-server

-- install Fetch into our project 
yarn add cross-fetch@2.1.0 (or npm install cross-fetch@2.1.0)
https://github.com/lquixada/cross-fetch

-- react animation
yarn add react-transition-group@2.3.0
--react-animation-components
yarn add react-animation-components@3.0.0
yarn add prop-types@15.6.0



